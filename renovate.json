{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "kubernetes": {
    "fileMatch": [
      ".+\\.yaml$",
      "kustomization\\.yaml$"
    ]
  },
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": [
        "manifests/apps/umami/kustomization\\.yaml$"
      ],
      "matchStrings": [
        "newTag:\\s+(?<currentValue>postgres-[0-9]+\\.[0-9]+\\.[0-9]+)"
      ],
      "depNameTemplate": "ghcr.io/umami-software/umami",
      "datasourceTemplate": "github-releases",
      "packageNameTemplate": "umami-software/umami"
    },
    {
      "customType": "regex",
      "fileMatch": [
        "manifests/apps/litellm/kustomization\\.yaml$"
      ],
      "matchStrings": [
        "newTag:\\s+(?<currentValue>main-v[0-9]+\\.[0-9]+\\.[0-9]+-stable)"
      ],
      "depNameTemplate": "ghcr.io/berriai/litellm",
      "datasourceTemplate": "github-releases",
      "packageNameTemplate": "berriai/litellm"
    }
  ],
  "packageRules": [
    {
      "groupName": "umami",
      "matchPackageNames": [
        "ghcr.io/umami-software/umami"
      ]
    },
    {
      "groupName": "litellm",
      "matchPackageNames": [
        "ghcr.io/berriai/litellm"
      ]
    }
  ]
}
