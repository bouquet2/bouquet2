{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "kubernetes"
  ],
  "packageRules": [
    {
      "matchDatasources": [
        "docker"
      ],
      "matchPackageNames": [
        "ghcr.io/umami-software/umami"
      ],
      "allowedVersions": "/^postgres-/",
      "groupName": "umami"
    },
    {
      "matchDatasources": [
        "docker"
      ],
      "matchPackageNames": [
        "ghcr.io/berriai/litellm"
      ],
      "allowedVersions": "/^main-.*-stable$/",
      "groupName": "litellm"
    }
  ],
  "kubernetes": {
    "fileMatch": [
      "manifests/apps/umami/.+\\.yaml$",
      "manifests/apps/litellm/.+\\.yaml$"
    ]
  }
}
